{
  "name": "mcpserver",
  "version": "1.0.0",
  "description": "A beginner project in creating an MCP server",
  "main": "src/server.js",
  "scripts": {
    "server:build": "tsc",
    "server:build:watch": "tsc --watch",
    "server:dev": "tsx src/server.ts",
    "client:dev": "tsx src/client.ts",
    "server:inspect": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector npm run server:dev"
  },
  "keywords": [
    "Typescript",
    "MCP",
    "server",
    "MCP",
    "Client",
    "MCP",
    "Server"
  ],
  "author": {
    "name": "Guhaprasaanth Nandagopal"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guhandelta/JS-MCP-Server/issues"
  },
  "typings": "./lib/index.d.ts",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6"
  },
  "exclude": [
    "node_modules"
  ],
  "homepage": "https://github.com/guhandelta/JS-MCP-Server#readme",
  "dependencies": {
    "@ai-sdk/google": "^2.0.1",
    "@inquirer/prompts": "^7.8.0",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "ai": "^5.0.2",
    "dotenv": "^17.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/node": "^24.0.3",
    "tsx": "4.20.3",
    "typescript": "^5.9.2"
  },
  "files": [
    "./bin/*",
    "./lib/*"
  ]
}
